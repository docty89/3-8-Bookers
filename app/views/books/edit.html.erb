<h1 class="h1">Editing Book</h1>
<%= form_with model:@book, url:"/books/#{@book.id}", local:true do |f| %>

  <div class="field">
    <label for="book_title">Title</label>
    
    <%= f.text_field :title, class: "book_title" %>
  </div>

  <div class="field">
    <label for="book_body">Body</label>

    <%= f.text_area :body, class: "book_body" %>
  </div>
  
  <div class="field"><%= f.submit 'Update Book' %></div>
  
  

<% end %>

